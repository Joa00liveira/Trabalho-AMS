@page
<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seu Portfólio</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
            display: flex;
        }

        .sidebar {
            width: 0;
            height: 100vh;
            background-color: #333;
            color: white;
            overflow: hidden;
            transition: width 0.5s;
        }

        .sidebar .toggle-btn,
        .sidebar .close-btn {
            background-color: black;
            cursor: pointer;
            padding: 10px;
            font-size: 20px;
            text-align: center;
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 1;
        }

        .sidebar .toggle-btn {
            display: block;
        }

        .sidebar .close-btn {
            display: none;
            background-color: transparent; /* Cor transparente */
            color: white; /* Cor do texto */
            border: none; /* Remover a borda */
        }

        .sidebar .close-btn:hover {
            background-color: #ddd; /* Cor clara ao passar o mouse */
        }

        .sidebar .content {
            margin-top: 50px; /* Adicionei margem superior para ajustar a posição do conteúdo */
            padding: 20px;
        }

        .sidebar .search-container {
            padding: 10px;
            background-color: #444;
        }

        .sidebar .search-container label,
        .sidebar .search-container input {
            display: block;
            width: 100%;
            margin-bottom: 10px;
        }

        .sidebar .theme-list {
            padding: 10px;
        }

        .theme-list h3 {
            margin-bottom: 10px;
        }

        .theme-list ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .theme-list li {
            padding: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .theme-list li:hover {
            background-color: #555;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            transition: margin-left 0.5s;
            margin-left: 0; /* Definindo a margem inicial */
            width: 100%; /* Garantindo que o conteúdo ocupa a largura total inicialmente */
            box-sizing: border-box; /* Considerando padding e borda dentro da largura total */
        }

        .main-content.closed {
            margin-left: 250px; /* Ajustando a margem quando a barra lateral está aberta */
            width: calc(100% - 250px); /* Ajustando a largura quando a barra lateral está aberta */
        }

        .info-section {
            margin-top: 20px;
        }

        .info-section h2 {
            color: #333;
        }

        .work-section {
            margin-top: 40px;
        }

        .work-section h2 {
            color: #333;
        }

        .work-item {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
        }
    </style>
</head>

<body>
    <div class="sidebar" id="sidebar">
        <div class="toggle-btn" onclick="toggleSidebar()">☰</div>
        <div class="close-btn" onclick="toggleSidebar()">×</div>
        <div class="content">
            <div class="search-container">
                <label for="search">Pesquisar por Tema:</label>
                <input type="text" id="search" name="search" placeholder="Digite um tema">
            </div>
            <div class="theme-list">
                <h3>Temas</h3>
                <ul>
                    <li>Tema 1</li>
                    <li>Tema 2</li>
                    <li>Tema 3</li>
                    <!-- Adicione mais temas conforme necessário -->
                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">
        <!-- Conteúdo principal do portfólio aqui -->
        <h1>Seu Portfólio</h1>
        <div class="info-section">
            <h2>Informações Pessoais</h2>
            <p>Nome: [Seu Nome]</p>
            <p>Email: [Seu Email]</p>
            <p>Localização: [Sua Localização]</p>
        </div>
        <div class="work-section">
            <h2>Trabalhos</h2>
            <div class="work-item">
                <h3>Projeto 1</h3>
                <p>Descrição do Projeto 1...</p>
            </div>
            <div class="work-item">
                <h3>Projeto 2</h3>
                <p>Descrição do Projeto 2...</p>
            </div>
            <!-- Adicione mais trabalhos conforme necessário -->
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            const toggleBtn = document.querySelector('.toggle-btn');
            const closeBtn = document.querySelector('.close-btn');

            if (sidebar.style.width === '0px' || sidebar.style.width === '') {
                sidebar.style.width = '250px';
                mainContent.classList.remove('closed');
                toggleBtn.style.display = 'none';
                closeBtn.style.display = 'block';
            } else {
                sidebar.style.width = '0';
                mainContent.classList.add('closed');
                toggleBtn.style.display = 'block';
                closeBtn.style.display = 'none';
            }
        }
    </script>
</body>

</html>
