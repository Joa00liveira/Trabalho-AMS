@page
<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        header {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em;
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        header h1 {
            margin: 20px;
        }

        header img {
            margin-right: 8px;
            max-height: 60px;
            max-width: 10000%;
        }

        section {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: left;
        }

        .pedido {
            width: 100%;
            display: flex;
            justify-content: space-between;
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .pedido div {
            width: 100%;
        }

        .pedido h3 {
            color: #333;
        }

        .pedido p {
            margin-bottom: 8px;
        }

        .status {
            padding: 10px;
            border-radius: 4px;
            font-weight: bold;
            margin-top: 10px;
        }

        .pendente {
            color: #ffcc00; 
        }

        .aceite {
            color: #00cc66; 
        }

        .pagamento {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .pagamento button {
            background-color: #333;
            color: white;
            padding: 8px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .pagamento button:hover {
            background-color: #555;
        }

        .footer {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            margin-top: 10px;
        }

        .footer a {
            text-decoration: none;
            color: #333;
        }

        .footer img {
            margin-right: 8px;
            max-height: 30px;
        }
    </style>
</head>

<body>
    <header>
        <h1>Pedidos</h1>
        <img src="/images/logotipo.png" alt="Imagem_Logotipo">
    </header>

    <section>
        <div class="pedido">
            <div>
                <h3>Tipo de Serviço: Arquiteto</h3>
                <p>Detalhes: Projeto de remodelação para a sala de estar.</p>
                <p>Arquiteto: João Silva</p>
                <p>Data do Serviço: 2023-12-01</p>
            </div>
            <div class="status pendente">Pendente</div>
            </div>
        </div>

        <div class="pedido">
            <div>
                <h3>Tipo de Serviço: Design </h3>
                <p>Detalhes: Decoração para a sala de estar.</p>
                <p>Designer: Maria Oliveira</p>
                <p>Data do Serviço: 2023-12-20</p>
            </div>
            <div class="status aceite">Aceite/Alugado</div>
            </div>
        </div>
    </section>

    <div class="footer">
        <a href="Pagamentos">
            <span>Efetua Pagamentos</span>
        </a>
    </div>
</body>

</html>
