@page
<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagamentos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        header {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em;
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        header h1 {
            margin: 20px;
        }

        header img {
            margin-right: 8px;
            max-height: 60px;
            max-width: 10000%;
        }

        section {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: left;
        }

        .pagamento-info {
            width: 100%;
            display: flex;
            justify-content: space-between;
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .pagamento-info div {
            width: 100%;
        }

        .pagamento-info h3 {
            color: #333;
        }

        .pagamento-info p {
            margin-bottom: 8px;
        }

        .footer {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            margin-top: 10px;
        }

        .footer a {
            text-decoration: none;
            color: #333;
        }

        .footer img {
            margin-right: 8px;
            max-height: 30px;
        }

        .pagamento select {
            padding: 8px;
            border-radius: 4px;
        }

        .pagamento button {
            background-color: #333;
            color: white;
            padding: 8px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .pagamento button:hover {
            background-color: #555;
        }
    </style>
</head>

<body>
    <header>
        <h1>Pagamentos</h1>
        <img src="/images/logotipo.png" alt="Imagem_Logotipo">
    </header>

    <section>
        <div class="pagamento-info">
            <div>
                <h3>Tipo de Serviço: Arquiteto</h3>
                <p>Detalhes: Projeto de remodelação para a sala de estar.</p>
                <p>Arquiteto: João Silva</p>
                <p>Data do Serviço: 2023-12-01</p>
            </div>
            <div class="pagamento">
                <span>Valor: 500 €</span>
                <label for="metodoPagamentoArquiteto">Escolha o método de pagamento:</label>
                <select id="metodoPagamentoArquiteto">
                    <option value="cartao">Cartão de Crédito</option>
                    <option value="transferencia">Transferência Bancária</option>
                    <option value="paypal">PayPal</option>
                </select>
                <button onclick="realizarPagamento('arquiteto', 'metodoPagamentoArquiteto')">Efetuar Pagamento</button>
            </div>
        </div>

        <div class="pagamento-info">
            <div>
                <h3>Tipo de Serviço: Design </h3>
                <p>Detalhes: Decoração para a sala de estar.</p>
                <p>Designer: Maria Oliveira</p>
                <p>Data do Serviço: 2023-12-20</p>
            </div>
            <div class="pagamento">
                <span>Valor: 300 €0</span>
                <label for="metodoPagamentoDesigner">Escolha o método de pagamento:</label>
                <select id="metodoPagamentoDesigner">
                    <option value="cartao">Cartão de Crédito</option>
                    <option value="transferencia">Transferência Bancária</option>
                    <option value="paypal">PayPal</option>
                </select>
                <button onclick="realizarPagamento('designer', 'metodoPagamentoDesigner')">Efetuar Pagamento</button>
            </div>
        </div>
    </section>

    <div class="footer">
        <a href="index.html">
            <span>Voltar para o Início</span>
        </a>
    </div>

    <script>
        function realizarPagamento(servico, selectId) {
            const metodoPagamentoSelect = document.getElementById(selectId);
            const metodoPagamentoEscolhido = metodoPagamentoSelect.value;
            
            if (metodoPagamentoEscolhido) {
                alert(`Pagamento realizado para ${servico} com o método: ${metodoPagamentoEscolhido}`);
            } else {
                alert('Operação de pagamento cancelada.');
            }
        }
    </script>
</body>

</html>
